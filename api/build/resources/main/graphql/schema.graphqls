type Query {
  bookById(id: ID): Book!
  authorById(id: ID): Author!

  allAuthors: [Author]!
}

type Mutation {
  createAuthor(input: CreateAuthorInput!): CreateAuthorPayload!
}

input CreateAuthorInput {
  firstName: String
  lastName: String
}

type CreateAuthorPayload {
  author: Author!
}

type Book {
  id: ID
  name: String
  pageCount: Int
  author: Author
}

type Author {
  id: ID
  firstName: String
  lastName: String
}